((print (:hailstone 55))
 
 (:even (x)
   (if (= x 0)
       1
       (- 1 (:even (- x 1)))))

 (:half (x)
   (if (= x 0)
       0
       (+ 1 (:half (- x 2)))))

 (:hailstone (n)
   (begin 
     (print n)
     (if (= n 1)
         1
         (let ((next (if (:even n)
                         (:half n)
                         (+ 1 (* 3 n)))))
           (:hailstone next))))))